<h3>Edit Post</h3>

<form action="/posts/{{post.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" value="{{post.postTitle}}" required> 
    </div>
</form>
    <div class="form-group">
        <label for="postBody">Body</label>
        <textarea name="commentBody" id="commentBody" required>{{post.postBody}}</textarea> 

        <button type="submit" id="comment-submit">Edit Post</button>
    </div>
