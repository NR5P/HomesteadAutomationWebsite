{{#each posts}}
    <div class="card">
        <img src="images/homestead-automation-logo.svg" alt="">
        <div class="container">
            <h3>{{postTitle}}</h3>
            <p>{{postBody}}</p>
        </div>
        <a class="btn-edit" href="/posts/edit/{{id}}">Edit</a>
    </div>
{{else}}
    <h2>No Posts</h2>
{{/each}}